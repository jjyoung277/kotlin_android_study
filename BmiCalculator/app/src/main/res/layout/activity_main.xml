<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/height"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0" android:hint="키"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:id="@+id/weight"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/height"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:inputType="number" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            android:hint="몸무게"/>
    <Button
            android:text="전송"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/weight"/>
</android.support.constraint.ConstraintLayout>